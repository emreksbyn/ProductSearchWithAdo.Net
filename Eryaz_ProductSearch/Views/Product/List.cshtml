<div class="container" style="margin-top:20px">
    <div class="row">
        <div class="col-sm-12">
            <div class="box">
                <div class="box-header">
                    <h4 class="box-title">Product List</h4>
                </div>
                <div class="box-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                 <th>Ürün ID</th>
                                 <th>Ürün Adı</th>
                                 <th>Markası</th>
                                 <th>Fiyatı</th>
                                 <th>Stok</th>
                                 <th>Güncelle</th>
                                 <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>@product.ProductId</td>
                                    <td>@product.ProductName</td>
                                    <td>@product.Brand</td>
                                    <td>@product.Price</td>
                                    <td>@product.Stock</td>
                                    <td>
                                        <a href="/Product/Update/@product.ProductId" class="btn btn-warning btn-sm">Update</a>
                                    </td>
                                    <td>
                                        <a href="/Product/Delete/@product.ProductId" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="box-footer">
                    <a href="/Product/Create" class="btn btn-primary btn-block">Ürün Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>